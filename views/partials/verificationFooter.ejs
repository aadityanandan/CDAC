  <!-- Toastr -->
  <script src="/plugins/toastr/toastr.min.js"> </script>


    <script>


  

document.addEventListener("DOMContentLoaded", function () {
  // Check if there's a message to display
  const message = '<%= message %>'; // Assuming you're using EJS templating
  const messageType = '<%= messageType %>'; // Assuming you're using EJS templating

  // Display the toastr message based on messageType
  if (message && messageType) {
    if (messageType === 'success') {
      toastr.success(message); // Show success message
    } else if (messageType === 'error') {
      toastr.error(message); // Show error message
    }
  }

  const resendButton = document.getElementById("resendOtpButton");
  const timerText = document.getElementById("timerText");

  // Initialize the resend button state
  resendButton.disabled = true;
  let timeLeft = 60; // 60-second cooldown

  // Start the timer
  const countdown = setInterval(() => {
    timerText.textContent = `You can resend the OTP in ${timeLeft} seconds.`;
    timeLeft--;

    if (timeLeft < 0) {
      clearInterval(countdown);
      timerText.textContent = "";
      resendButton.disabled = false;
    }
  }, 1000);
});


      
    </script> 
    



