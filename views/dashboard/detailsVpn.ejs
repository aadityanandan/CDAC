<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/header") %>
    <style>
        .view-more-btn {
            cursor: pointer;
            color: blue;
            text-decoration: underline;
        }
        table {
            border-collapse: collapse;
            width: 100%;
            margin-top: 20px;
        }
        th, td {
            padding: 12px;
            border: 1px solid #ddd;
            text-align: left;
        }
        th {
            background-color: #f4f4f4;
        }
    </style>
</head>
<body>
    <h1 style="text-align: center;">Submitted VPN Forms</h1>
    <table>
        <thead>
            <tr>
                <th>S.No</th>
                <th>UUID</th>
                <th>Name</th>
                <th>Department</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (vpnForms.length > 0) { %>
                <% vpnForms.forEach((form, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= form.uuid %></td>
                        <td><%= form.Name %></td>
                        <td><%= form.deptName %></td>
                        <td><%= form.Email %></td>
                        <td>
                            <span class="view-more-btn" onclick="openVpnPdf('<%= form.uuid %>')">View PDF</span>
                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="6">No VPN forms submitted yet.</td>
                </tr>
            <% } %>
        </tbody>
    </table>

    <script>
        function openVpnPdf(uuid) {
            window.open(`/generate-vpn-pdf/${uuid}`, "_blank");
        }
    </script>

    <%- include("../partials/footer") %>
</body>
</html>
